{% extends "FrontBundle::layout.html.twig" %}


{% block title %}
    News - {{ parent() }}
{% endblock %}

{% block leftMenu %}
    {{ include("@Front/Main/domainMenu.html.twig", {"domains" : domains}) }}
{% endblock %}
{% block content %}
    <div class="main-content">
        {% for new in news %}
            <div class="single-new">
                    <img class="new-image" src="{{ new.image }}"/>
                    <label>{{ new.domain }}</label>
                    <h3>{{ new.title }}</h3>
                    <p>{{ new.text|length > 300 ? new.text|slice(0, 300) ~ '...' : new.text  }}</p>
                    <p>
                        <span>{{ new.author }}</span>
                        <span>{{ new.creationDate | date('d/m/Y') }}</span>
                        <span><a href="#">Lire la suite</a></span>
                    </p>
            </div>
            {% if not loop.last %}
                <hr/>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}