<div class="well well-block-info">
    <div class="col-md-6" style="height: 425px;">
        <h4 class="margin-left-15">Informations générales</h4>
        <div class="form-group">
            {{ form_label(form.rights, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.rights) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.rights}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.name, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.name, {"attr": {'class' : "form-control"}}) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.name}) }}
        </div>

    </div>
</div>
