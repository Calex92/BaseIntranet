{% extends("@AdminApp/layout.html.twig") %}

{% block title %}
    Mise à jour groupe - {{ parent() }}
{% endblock %}


{% block content %}
    <div class="col-md-12 main-content">
        <p class="alert alert-warning">
            Vous éditez un groupe déjà existant, attention à vos actions!.
        </p>
        <h2 class="col-md-12">Modifier un groupe</h2>
        <div class="col-md-12">
            {{ parent() }}
        </div>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}

        {{ include('@AdminApp/Form/groupType.html.twig') }}

        {{ form_rest(form) }}

        <div>
            <input type="submit" class="btn btn-default pull-right" value="Modifier"/>
        </div>

        {{ form_end(form) }}
        <div class="clearfix"> </div>
        <div class="well well-block-info margin-top-20">
            <h4 class="margin-left-15">Utilisateurs du groupe</h4>

            <table class="table table-striped table-bordered table-hover dataTable">
                <thead>
                <tr>
                    <th>Login</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Adresse mail</th>
                    <th>Agence principale</th>
                </tr>
                </thead>
                <tbody>
                {% for user in group.users %}
                    {# @var user \Front\UserBundle\Entity\User#}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.surname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.agencyPrincipal.agency.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
