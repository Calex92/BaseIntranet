{% extends("AdminAppBundle::layout.html.twig") %}

{% block title %}
    Liste groupes - {{ parent() }}
{% endblock %}


{% block content %}
    <div class="col-md-12 main-content">
        <h2 class="col-md-12">Liste des groupes</h2>
        <div class="col-md-12">
            {{ parent() }}
        </div>
        <a class="col-md-3 btn btn-default pull-right" href="{{ path("admin_group_manager_add") }}">Cr√©er
            groupe</a>
        <table class="table table-striped table-bordered table-hover dataTable">
            <thead>
            <tr>
                <th data-priority="3">Nom</th>
                <th data-priority="6">Nombre d'utilisateurs</th>
                <th data-priority="1">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for group in groups %}
                {# @var region \Front\AppBundle\Entity\Region#}
                <tr>
                    <td>{{ group.name }}</td>
                    <td>{{ group.users.count }}</td>
                    <td class="text-center">
                        <a href="{{ path("admin_group_manager_update", { 'id': group.id }) }}"
                           title="Modifier"><i
                                    class="glyphicon glyphicon-cog"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}