<div>
    <h4>Informations générales</h4>
    <div class="form-group">
        {{ form_label(form.username, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
        <div class="col-sm-8">
            {{ form_widget(form.username, {"attr": {'class' : "form-control"}}) }}
        </div>
        {{ form_errors(form.username) }}
    </div>

    <div class="form-group">
        {{ form_label(form.firstname, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
