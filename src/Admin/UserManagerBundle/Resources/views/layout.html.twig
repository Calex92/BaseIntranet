{% extends("AdminAppBundle:Base:index.html.twig") %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/adminusermanager/css/userManagerStyle.css') }}">
{% endblock %}

{% block mainContent %}
<div class="container">
    <div class="row">
        {% block content %}
            {% for key, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ key }} margin-top-15">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}
    </div>
</div>
{% endblock %}