{% extends("AdminAppBundle:Base:index.html.twig") %}

{% block title %}
    Création utilisateur - {{ parent() }}
{% endblock %}


{% block mainContent %}
    <div class="container">

        <div class="col-md-12 main-content">
            <h2 class="col-md-12">Création utilisateur</h2>
            <div class="col-md-12">
                {{ parent() }}
            </div>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

            <div class="well col-md-6 well-block-info" >
                <h4>Informations personnelles</h4>
                <div class="form-group">
                    {{ form_label(form.username, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.username, {"attr": {'class' : "form-control"}}) }}
                    </div>
                    {{ form_errors(form.username) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.firstname, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.firstname, {"attr": {'class' : "form-control"}}) }}
                    </div>
                    {{ form_errors(form.firstname) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.surname, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.surname, {"attr": {'class' : "form-control"}}) }}
                    </div>
                    {{ form_errors(form.surname) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.email, {"attr": {'class' : "form-control"}}) }}
                    </div>
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="well col-md-6 well-block-info">
                <h4>Informations professionnelles</h4>
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.plainPassword.first, {"attr": {'class' : "form-control"}}) }}
                    </div>
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.plainPassword.second, {"attr": {'class' : "form-control"}}) }}
                    </div>
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
            {{ form_rest(form) }}

            <div>
                <input type="submit" class="btn btn-default pull-right" value="Créer" />
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}