{% extends "FrontAppBundle::layout.html.twig" %}

{% block title %}
    Applications - {{ parent() }}
{% endblock %}

{% block content %}
    <div class="main-content">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">Voici l'ensemble des applications auxquelles vous avez acc√®s :</h3>
            </div>

            {% for application in applications %}
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 thumb" >
                    <a class="thumbnail" href="{{ path(application.location) }}">
                        <img style="min-height:100px;height:100px;" class="img-responsive"
                             src="{{ asset(application.image.url) }}" alt="{{ application.image.alt }}">
                        <h4 style="font-size: 80%; text-align: center;">
                            {{ application.name }}
                        </h4>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}