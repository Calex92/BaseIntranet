{% extends "@FrontDomain/App/base.html.twig" %}

{% block content %}
    <h2 class="col-md-7 text-nowrap">Liste des domaines</h2>
    <a class="col-md-3 margin-top-20 btn btn-default pull-right" href="{{ path("domain_manager_domain_add") }}">
        Cr√©er un domaine
    </a>
    <table class="table table-striped table-bordered table-hover dataTable">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Nom court</th>
            <th>Actif</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for domain in domains %}
            {# @var domain \Front\DomainBundle\Entity\Domain#}
            <tr>
                <td>{{ domain.label }}</td>
                <td>{{ domain.labelSimplified }}</td>
                <td class="text-center">
                    {% if domain.active %}
                        <span class="glyphicon glyphicon-ok icon-success"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove icon-danger"></span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <a href="{{ path('domain_manager_domain_modify', {'id': domain.id }) }}"
                       title="Modifier le catalogue"><i
                                class="glyphicon glyphicon-cog"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
