{# @var form \Front\DomainBundle\Entity\Catalog #}
<div class="clearfix"></div>
{{ form_errors(form) }}
<div class="well well-block-info">
    <div class="col-md-8 col-sm-12 ">
        <h4>Informations générales</h4>
        <div class="form-group">
            {{ form_label(form.title, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.title, {"attr": {'class' : "form-control"}}) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.title}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.beginPublicationDate, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.beginPublicationDate, {"attr": {'class' : "datepicker"}}) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.beginPublicationDate}) }}
        </div><br/>
        <div class="form-group">
            <label class="col-sm-4 control-label control-label required" for="catalog_isPositionLeft">Position</label>
            <div class="col-sm-8">
                {{ form_widget(form.isPositionLeft, {"attr": {'class' : "datepicker", 'data-toggle' : 'toggle', 'data-off': 'Droite', 'data-on' : 'Gauche'}}) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.isPositionLeft}) }}
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label control-label required" for="catalog_isPositionLeft">Visibilité</label>
            <div class="col-sm-8">
                {{ form_widget(form.visible, {"attr": {'class' : "datepicker", 'data-toggle' : 'toggle', 'data-off': 'Caché', 'data-on' : 'Visible'}}) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.visible}) }}
        </div>
    </div>
</div>
<div class="well well-block-info">
    <div class="col-md-8 col-sm-12 ">
        <h4>Fichiers</h4>
        <div class="form-group">
            {{ form_label(form.fileNameShown, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.fileNameShown) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.fileNameShown}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.file, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.file) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.file}) }}

        </div>
        <div class="form-group">
            {{ form_label(form.imageFile, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.imageFile) }}
            </div>
            {{ include ('@FrontApp/Form/errorForm.html.twig', {'formValue' : form.imageFile}) }}
        </div>
    </div>
</div>

{{ form_rest(form) }}
