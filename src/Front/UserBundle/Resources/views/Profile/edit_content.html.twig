{% trans_default_domain 'FOSUserBundle' %}
<div class="main-content change-profile" style="overflow: hidden">
    <h2>Modification de votre profil</h2>

    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

    {{ form_errors(form) }}
    <div class="well" style="overflow: hidden">
        <h4><u>Informations personnelles</u></h4>
        <div class="form-group">
            {{ form_label(form.username, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.username, {"attr": {'class' : "form-control"}}) }}
            </div>
            {{ form_errors(form.username) }}
        </div>

        <div class="form-group">
            {{ form_label(form.firstname, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.firstname, {"attr": {'class' : "form-control"}}) }}
            </div>
            {{ form_errors(form.firstname) }}
        </div>

        <div class="form-group">
            {{ form_label(form.surname, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.surname, {"attr": {'class' : "form-control"}}) }}
            </div>
            {{ form_errors(form.surname) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
            <div class="col-sm-8">
                {{ form_widget(form.email, {"attr": {'class' : "form-control"}}) }}
            </div>
            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="well" style="overflow: hidden">
        <h4><u>Informations professionnelles</u></h4>
    </div>

    <span class="control-label" style="padding-left: 15px;">
        Afin de confirmer les modifications, veuillez entrer votre mot de passe actuel:
    </span>

    <div class="form-group">
        {{ form_label(form.current_password, null, {'label_attr' : {"class" : "col-sm-4 control-label"}} ) }}
        <div class="col-sm-8">
            {{ form_widget(form.current_password, {"attr": {'class' : "form-control", 'placeholder' : "Votre mot de passe actuel"}}) }}
        </div>
        {{ form_errors(form.current_password) }}
    </div>

    {{ form_widget(form) }}

    <input type="submit" class="btn btn-default pull-right" value="{{ 'profile.edit.submit'|trans }}"/>

    {{ form_end(form) }}
</div>