{% extends("::base.html.twig") %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/helpreferentielapp/css/style.css') }}">
{% endblock %}

{% block imageBanner %}
    <a href="{{ path("help_referentiel_app_homepage") }}">
        <img src="{{ asset('download/admin/img/help referentiel.png') }}" alt="Helpdesk Référentiel" title="Accueil"/>
    </a>
{% endblock %}

{% block profileSwitcher %}
    {# applicationHelpReferentiel is a global variable set in config.yml #}
    {% set application = applicationHelpReferentiel %}
    {{ parent() }}
{% endblock %}

{% block separationBar %}
    <div class="separation-bar separation-bar-help-referentiel"></div>
{% endblock %}

{% block menus %}
    {{ include("@FrontApp/Main/topMenu.html.twig", {"menus" : getMenusHelpReferentielApp(app.request.attributes.get('_route')) }) }}
{% endblock %}

{% block mainContent %}
    <div class="container">
        <div class="row">
            {% block content %}
                {% for key, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{ key }} margin-top-15">
                            {{ message|trans({}, 'FOSUserBundle') }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
